<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Riwayat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bglogin"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_editor_absoluteX="16dp"
        app:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tiket Anda"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="@font/rubik_bold"
                android:textColor="#3975A5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:orientation="vertical"
            android:padding="10dp">
            
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Riwayat Kapal"
                    android:textColor="@color/dark_blue"
                    android:textAlignment="center"/>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Asal"
                    tools:layout_editor_absoluteX="202dp"
                    tools:layout_editor_absoluteY="99dp" />

                <TextView
                    android:id="@+id/asal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    tools:layout_editor_absoluteX="202dp"
                    tools:layout_editor_absoluteY="99dp" />
            </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">

                 <TextView
                     android:layout_width="70dp"
                     android:layout_height="wrap_content"
                     android:text="Tujuan"
                     tools:layout_editor_absoluteX="202dp"
                     tools:layout_editor_absoluteY="99dp" />

                 <TextView
                     android:id="@+id/tujuan"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="..."
                     tools:layout_editor_absoluteX="202dp"
                     tools:layout_editor_absoluteY="99dp" />
             </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    tools:layout_editor_absoluteX="202dp"
                    tools:layout_editor_absoluteY="99dp" />

                <TextView
                    android:id="@+id/tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    tools:layout_editor_absoluteX="202dp"
                    tools:layout_editor_absoluteY="99dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Dewasa"
                    tools:layout_editor_absoluteX="202dp"
                    tools:layout_editor_absoluteY="99dp" />

                <TextView
                    android:id="@+id/dewasa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    tools:layout_editor_absoluteX="202dp"
                    tools:layout_editor_absoluteY="99dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Anak"
                    tools:layout_editor_absoluteX="202dp"
                    tools:layout_editor_absoluteY="99dp" />

                <TextView
                    android:id="@+id/anak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    tools:layout_editor_absoluteX="202dp"
                    tools:layout_editor_absoluteY="99dp" />
            </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Riwayat Kamar"
                android:textColor="@color/dark_blue"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    tools:layout_editor_absoluteX="202dp"
                    tools:layout_editor_absoluteY="99dp" />

                <TextView
                    android:id="@+id/nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    tools:layout_editor_absoluteX="202dp"
                    tools:layout_editor_absoluteY="99dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Kamar"
                    tools:layout_editor_absoluteX="202dp"
                    tools:layout_editor_absoluteY="99dp" />

                <TextView
                    android:id="@+id/kamar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    tools:layout_editor_absoluteX="202dp"
                    tools:layout_editor_absoluteY="99dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Jml Kamar"
                    tools:layout_editor_absoluteX="202dp"
                    tools:layout_editor_absoluteY="99dp" />

                <TextView
                    android:id="@+id/jmlKamar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    tools:layout_editor_absoluteX="202dp"
                    tools:layout_editor_absoluteY="99dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Check In"
                    tools:layout_editor_absoluteX="202dp"
                    tools:layout_editor_absoluteY="99dp" />

                <TextView
                    android:id="@+id/in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    tools:layout_editor_absoluteX="202dp"
                    tools:layout_editor_absoluteY="99dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Chech Out"
                    tools:layout_editor_absoluteX="202dp"
                    tools:layout_editor_absoluteY="99dp" />

                <TextView
                    android:id="@+id/out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    tools:layout_editor_absoluteX="202dp"
                    tools:layout_editor_absoluteY="99dp" />

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/book"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="24dp"
            android:text="Batalkan Pemesanan"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:backgroundTint="@color/dark_blue"
            app:cornerRadius="50dp" />


    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>